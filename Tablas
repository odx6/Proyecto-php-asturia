CREATE TABLE  categoria(
   id INT AUTO_INCREMENT,
   nombre VARCHAR(100) NOT NULL,
   descripcion VARCHAR(100) NOT NULL,
   PRIMARY KEY (id)
);

CREATE TABLE  subcategoria(
   id INT AUTO_INCREMENT,
   fk_categoria INT,
   nombre VARCHAR(100) NOT NULL
   descripcion VARCHAR(255),
   PRIMARY KEY (id),
   FOREIGN KEY (fk_categoria) REFERENCES categoria(id)
);

//
 ALTER TABLE tabla2
ADD FOREIGN KEY (tabla1_id) REFERENCES tabla1(id);


ALTER TABLE tblcatpro
ADD FOREIGN KEY (INTIDCAT) REFERENCES categoria(id);



//TABLA  ALM
CREATE TABLE TBLCATALM(
INTIDALM INT AUTO_INCREMENT,
STRNOMALM TEXT(30),
STRDESALM TEXT(30),
DTEHOR DATETIME,
BITSUS INT(1),
    PRIMARY KEY(INTIDALM)
);
//

CREATE TABLE TBLCATTOP(
INTIDTOP INT AUTO_INCREMENT,
STRNOMTPO TEXT(30),
STRDESTPO TEXT(150),
DTEHOR DATETIME,
BITSUS INT(1),
    PRIMARY KEY(INTIDTOP)
);


CREATE TABLE TBLINV(
INTIDINV INT AUTO_INCREMENT,
DTEFEC DATETIME,
INTIDTOP INT(11),
INTTIPMOV INT(11),
INTFOL    INT(20),
IDEMP  INT(11),
STROBS    TEXT(150),
INTALM    INT(11),
DTEHOR DATETIME,
    PRIMARY KEY(INTIDINV),
     FOREIGN KEY (IDEMP) REFERENCES tblcatemp(IDEMP),
     FOREIGN KEY (INTALM) REFERENCES tblcatalm(INTIDALM),
     FOREIGN KEY (INTIDTOP) REFERENCES tblcattop(INTIDTOP)
);

CREATE TABLE TBLINVDET(
INTIDDET INT AUTO_INCREMENT,
INTIDINV INT(11),
SKU TEXT(50),
STRREF TEXT(20),
INTCAN INT,
INTIDUNI   INT(11),
MONPRCOS  DOUBLE,
MONCTOPRO  DOUBLE,
DTEHOR DATETIME,
    PRIMARY KEY(INTIDDET),
     FOREIGN KEY (INTIDINV) REFERENCES tblinv(INTIDINV),
     FOREIGN KEY (SKU) REFERENCES tblcatpro(STRSKU),
     FOREIGN KEY (INTIDUNI) REFERENCES tblcatuni(INTIDUNI)
);

CREATE TABLE TBLTARINV(
INTIDTAR INT AUTO_INCREMENT,
INTIDINV INT(11),
DTEFEC INT(11),
SKU VARCHAR(50),
STRREF TEXT(20),
INTCAN INT,
INTIDUNI   INT(11),
MONPRCOS  DOUBLE,
MONCTOPRO  DOUBLE,
INTTIPMOV INT(11),
INTALM INT(11),
DTEHOR DATETIME,
    PRIMARY KEY(INTIDTAR),
     FOREIGN KEY (INTIDINV) REFERENCES tblinv(INTIDINV),
     FOREIGN KEY (SKU) REFERENCES tblcatpro(STRSKU),
     FOREIGN KEY (INTIDUNI) REFERENCES tblcatuni(INTIDUNI),
     FOREIGN KEY (INTALM) REFERENCES tblcatalm(INTIDALM)
);